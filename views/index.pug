extends layout

block content
	-if (theme)
		-var themeClass = theme.toLowerCase()
	-else
		-var themeClass = 'default'
	-if (nonce)
		-var nval = nonce
	-else
		-var nval = ''
	div(class=themeClass class=["wot"] id='wot')
		div(id='woterminal' class='terminal')
			div(id='wotheader' class='header')
				h1= title
			div(id='wotoutput' class='output')
			div(id='wotcli' class='cli')
				form(id='cliform' name='cliform' method='POST' autocomplete="off")
					div(class='field')
						input(id='wotcli-input' name='path' autocomplete="off")
						input(id='wotcli-nonce' name='nonce' type='hidden' value=nval)
